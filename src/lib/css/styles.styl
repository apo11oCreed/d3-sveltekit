@css { @layer  base, utilities, components, theme;}

@layer base

    // <uniquifier>: Use a unique and descriptive class name
    // <weight>: Use a value from 100 to 900
    
    // .inter-normal {
    //   font-family: "Inter", serif;
    //   font-optical-sizing: auto;
    //   font-weight: 400;
    //   font-style: normal;
    // }

    body
        color #333
        margin 0
        padding 0
        font-size 1rem
        line-height 1.5
        background-color #f4f4f4
        padding 1rem
    h1
        font-size 3rem

    form
        font-size 0.8rem

@layer theme
    :root
        --mbta #165c96 //rgb(22, 92, 150)
        --blue #003da5 //rgb(0, 61, 165)
        --purple #80276c //rgb(128, 39, 108)
        --green #00843d
        --red #da291c //rgb(218, 41, 28)
        --orange #ed8b00 //rgb(237, 139, 0)
        --aqua #008eaa
        font-family "Inter", serif
        font-optical-sizing: auto
        font-weight 400
        font-style normal
    body
        //color #846060
    header
        background var(--mbta)
        h1
            color #fff
            margin 0
            padding 1rem
    .controls
        container-name controls
        container-type inline-size
    .blue
        background var(--blue)

@container controls (min-width: 48rem)
    form
        font-size 1rem
